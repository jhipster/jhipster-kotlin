        val authorities = mutableListOf<GrantedAuthority>()
        authorities.add(SimpleGrantedAuthority(AuthoritiesConstants.ANONYMOUS))
        val isAuthenticated = SecurityUtils.isAuthenticated()
            .subscriberContext(
