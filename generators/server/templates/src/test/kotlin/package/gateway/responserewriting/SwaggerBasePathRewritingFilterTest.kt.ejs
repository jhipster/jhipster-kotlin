package <%= packageName %>.gateway.responserewriting

import com.netflix.zuul.context.RequestContext
import org.apache.commons.io.IOUtils
import org.junit.jupiter.api.Test
import org.springframework.mock.web.MockHttpServletRequest
import org.springframework.mock.web.MockHttpServletResponse

import java.io.ByteArrayInputStream
import java.nio.charset.StandardCharsets
import java.util.zip.GZIPInputStream

import org.junit.jupiter.api.Assertions.assertEquals
import org.junit.jupiter.api.Assertions.assertFalse
import org.junit.jupiter.api.Assertions.assertTrue

/**
 * Tests [SwaggerBasePathRewritingFilter] class.
 */
class SwaggerBasePathRewritingFilterTest {

    private val filter = SwaggerBasePathRewritingFilter()

    @Test
    fun shouldFilter_on_default_swagger_url() {
        val request = MockHttpServletRequest("GET", "/v3/api-docs")
        RequestContext.getCurrentContext().request = request

        assertTrue(filter.shouldFilter())
    }

    /**
     * Zuul DebugFilter can be triggered by "deug" parameter.
     */
    @Test
    fun shouldFilter_on_default_swagger_url_with_param() {
        val request = MockHttpServletRequest("GET", "/v3/api-docs")
        request.setParameter("debug", "true")
        RequestContext.getCurrentContext().request = request

        assertTrue(filter.shouldFilter())
    }

    @Test
    fun shouldNotFilter_on_wrong_url() {
        val request = MockHttpServletRequest("GET", "/management/info")
        RequestContext.getCurrentContext().request = request

        assertFalse(filter.shouldFilter())
    }

    @Test
    @Throws(Exception::class)
    fun run_on_valid_response() {
        val request = MockHttpServletRequest("GET", "services/service1/v3/api-docs")
        val context = RequestContext.getCurrentContext()
        context.request = request

        val response = MockHttpServletResponse()
        context.responseGZipped = false
        context.response = response

        val `in` = IOUtils.toInputStream("{\"servers\":[{\"url\":\"http://localhost:8080\"}]}", StandardCharsets.UTF_8)
        context.responseDataStream = `in`

        filter.run()

        assertEquals("UTF-8", response.characterEncoding)
        assertEquals("{\"servers\":[{\"url\":\"http://localhost:8080/services/service1\"}]}", context.responseBody)
    }

    @Test
    @Throws(Exception::class)
    fun run_on_valid_response_gzip() {
        val request = MockHttpServletRequest("GET", "services/service1/v3/api-docs")
        val context = RequestContext.getCurrentContext()
        context.request = request

        val response = MockHttpServletResponse()
        context.responseGZipped = true
        context.response = response

        context.responseDataStream = ByteArrayInputStream(gzipData("{\"servers\":[{\"url\":\"http://localhost:8080\"}]}"))

        filter.run()

        assertEquals("UTF-8", response.characterEncoding)

        val responseDataStream = GZIPInputStream(context.responseDataStream)
        val responseBody = IOUtils.toString(responseDataStream, StandardCharsets.UTF_8)
        assertEquals("{\"servers\":[{\"url\":\"http://localhost:8080/services/service1\"}]}", responseBody)
    }

    @Test
    @Throws(Exception::class)
    fun run_on_empty() {
        val request = MockHttpServletRequest("GET", "/services/service1/v3/api-docs")
        val context = RequestContext.getCurrentContext()
        context.request = request

        val response = MockHttpServletResponse()
        context.responseGZipped = true
        context.response = response

        context.responseDataStream = ByteArrayInputStream(gzipData("{}"))

        filter.run()

        assertEquals("UTF-8", response.characterEncoding);

        val responseDataStream = GZIPInputStream(context.responseDataStream)
        val responseBody = IOUtils.toString(responseDataStream, StandardCharsets.UTF_8)
        assertEquals("{}", responseBody)
    }

    @Test
    @Throws(Exception::class)
    fun run_on_empty_servers() {
        val request = MockHttpServletRequest("GET", "/services/service1/v3/api-docs")
        val context = RequestContext.getCurrentContext()
        context.request = request

        val response = MockHttpServletResponse()
        context.responseGZipped = true
        context.response = response

        context.responseDataStream = ByteArrayInputStream(gzipData("{\"servers\":[]}"))

        filter.run()

        assertEquals("UTF-8", response.characterEncoding)

        val responseDataStream = GZIPInputStream(context.responseDataStream)
        val responseBody = IOUtils.toString(responseDataStream, StandardCharsets.UTF_8)
        assertEquals("{\"servers\":[]}", responseBody)
    }

    @Test
    @Throws(Exception::class)
    fun run_on_empty_urls() {
        val request = MockHttpServletRequest("GET", "/services/service1/v3/api-docs")
        val context = RequestContext.getCurrentContext()
        context.request = request

        val response = MockHttpServletResponse()
        context.responseGZipped = true
        context.response = response

        context.responseDataStream = ByteArrayInputStream(gzipData("{\"servers\":[{\"description\":\"description without urls\"}]}"))

        filter.run()

        assertEquals("UTF-8", response.characterEncoding)

        val responseDataStream = GZIPInputStream(context.responseDataStream)
        val responseBody = IOUtils.toString(responseDataStream, StandardCharsets.UTF_8)
        assertEquals("{\"servers\":[{\"description\":\"description without urls\"}]}", responseBody)
    }

    @Test
    @Throws(Exception::class)
    fun run_on_bad_response() {
        val request = MockHttpServletRequest("GET", "/services/service1/v3/api-docs")
        val context = RequestContext.getCurrentContext()
        context.request = request

        val response = MockHttpServletResponse()
        context.responseGZipped = true
        context.response = response

        context.responseDataStream = ByteArrayInputStream(gzipData("bad response"))

        filter.run()

        assertEquals("UTF-8", response.characterEncoding)

        val responseDataStream = GZIPInputStream(context.responseDataStream)
        val responseBody = IOUtils.toString(responseDataStream, StandardCharsets.UTF_8)
        assertEquals(responseBody, "null")
    }
}
