package <%= packageName %>.repository.rowmapper


import java.time.Instant
import java.util.function.BiFunction

import org.springframework.stereotype.Service

import <%= packageName %>.domain.User
import <%= packageName %>.service.ColumnConverter

import io.r2dbc.spi.Row

/**
 * Converter between [Row] to [User], with proper type conversions.
 */
@Service
class UserRowMapper(private val converter: ColumnConverter): BiFunction<Row, String, User> {
    /**
     * Take a [Row] and a column prefix, and extract all the fields.
     * @return the [User] stored in the database.
     */
    @Override
    fun apply(row: Row, prefix: String): User {
        val entity = User()
        entity.id = row.get("${prefix}_id", Long::class)
        entity.login = converter.fromRow(row, "${prefix}_login", String::class)
        entity.password = converter.fromRow(row, "${prefix}_password", String::class)
        entity.firstName = converter.fromRow(row, "${prefix}_first_name", String::class)
        entity.lastName = converter.fromRow(row, "${prefix}_last_name", String::class)
        entity.email = converter.fromRow(row, "${prefix}_email", String::class)
        entity.activated = Boolean.TRUE.equals(converter.fromRow(row, "${prefix}_activated", Boolean::class))
        entity.langKey = converter.fromRow(row, "${prefix}_lang_key", String::class)
        entity.imageUrl = converter.fromRow(row, "${prefix}_image_url", String::class)
        entity.activationKey = converter.fromRow(row, "${prefix}_activation_key", String::class)
        entity.resetKey = converter.fromRow(row, "${prefix}_reset_key", String::class)
        entity.resetDate = converter.fromRow(row, "${prefix}_reset_date", Instant::class)
        return entity
    }

}
