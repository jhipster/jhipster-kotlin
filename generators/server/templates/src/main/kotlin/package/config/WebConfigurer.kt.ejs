            <%_ if (applicationType === 'gateway') { _%>
            source.registerCorsConfiguration("/*/api/**", config)
            source.registerCorsConfiguration("/*/management/**", config)
                <%_ if (authenticationType === 'uaa') { _%>
            source.registerCorsConfiguration("/*/oauth/**", config)
                <%_ } _%>
            <%_ } _%>
